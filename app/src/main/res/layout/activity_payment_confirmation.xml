<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f82d2"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.abhijith.eventsapp.PaymentConfirmationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0f82d2">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:text="Check Events"
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:textColor="#fff"
            />
        <at.markushi.ui.CircleButton
            android:layout_height="80dp"
            android:layout_width="80dp"
            app:cb_color="#fff"
            android:id="@+id/confirm_edit"
            app:cb_pressedRingWidth="16dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_gravity="right"/>

    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:id="@+id/list_view">

    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0f82d2">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:text="Confirm ( Rs. 200 )"
            android:id="@+id/confirm_bill"
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:textColor="#fff"
            />
        <at.markushi.ui.CircleButton
            android:layout_height="80dp"
            android:layout_width="80dp"
            app:cb_color="#fff"
            app:cb_pressedRingWidth="16dp"
            android:src="@drawable/ic_check_black_24dp"
            android:id="@+id/confirm_confirm"
            android:layout_gravity="right"/>

    </LinearLayout>

</LinearLayout>
